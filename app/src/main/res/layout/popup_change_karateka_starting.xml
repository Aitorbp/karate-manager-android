<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_join_group_popup"
    android:layout_gravity="center">
<TextView
    android:layout_marginTop="20dp"
 
    android:layout_gravity="center"
    android:gravity="center"
    android:textSize="18dp"
    android:textStyle="bold"
    android:textColor="@color/colorButtonBlack"
    android:id="@+id/text_all_karatekas_main_team"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="You have all karatekas in the main team"></TextView>
    <ListView
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/starting_listview"></ListView>

    <Button
        android:id="@+id/exit_popup_change_karateka"
        android:background="@drawable/custom_button"
        android:text="Exit"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="30dp"></Button>

</LinearLayout>


