<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="340dp"
    android:layout_height="250dp"
    android:background="@drawable/custom_join_group_popup"
    android:layout_gravity="center">

    <LinearLayout
        android:background="@drawable/custom_border_set_line"
        android:layout_marginTop="10dp"
        android:layout_width="330dp"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginLeft="15dp"
            android:id="@+id/rival_picture"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"

            app:civ_border_width="3dp"
            app:civ_border_color="@color/colorButtonBlack"
            android:src="@drawable/logo_border_karate_manager"
            />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="120dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/rival_name"
                android:text="Rafael Aghayev r"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="@color/colorButtonBlack"
                android:layout_width="match_parent"
                android:layout_height="32dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">


                <TextView
                    android:background="@drawable/custom_points_karatekas"
                    android:id="@+id/rival_points"
                    android:layout_width="27dp"
                    android:layout_height="25dp"
                    android:text="200"
                    android:textSize="15dp"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout

        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <ListView
            android:layout_marginHorizontal="4dp"
            android:id="@+id/listview_karatekas_rival"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>



    </LinearLayout>



</LinearLayout>