<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/custom_card_karateka"
    android:id="@+id/adapter_container"
    android:elevation="10dp">
    <LinearLayout
        android:id="@+id/card_default"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:visibility="gone">
        <ImageView
            android:background="@drawable/custom_card_karateka"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:id="@+id/card_imagen_karateka_default_myTeam"
            android:layout_width="90dp"
            android:layout_height="110dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/card_karateka"
        android:layout_width="90dp"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:visibility="visible"
        >
        <ImageView
            android:id="@+id/card_imagen_karateka_myTeam"
            android:background="@drawable/custom_card_imagen_karateka"
            android:layout_gravity="center"
            android:scaleType="matrix"
            android:adjustViewBounds="true"
            android:layout_width="90dp"
            android:layout_height="70dp" />


        <TextView
            android:textSize="9dp"
            android:layout_gravity="center"
            android:id="@+id/card_name_karateka_myTeam"
            android:gravity="center"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:textStyle="bold"
            android:text="Rafael Aghayev"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_marginRight="5dp"
                android:id="@+id/card_country_karateka_myTeam"
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:civ_border_color="@color/colorButtonBlack"
                app:civ_border_width="2dp"
                />
            <TextView
                android:textSize="7dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:background="@drawable/custom_circular_weigth"
                android:textColor="@color/colorWhite"
                android:id="@+id/card_weigth_karateka_myTeam"
                android:layout_width="18dp"
                android:layout_height="18dp"
                />
            <TextView
                android:background="@drawable/custom_points_karatekas"
                android:id="@+id/card_points_karateka_myTeam"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="200"
                android:textSize="7dp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>