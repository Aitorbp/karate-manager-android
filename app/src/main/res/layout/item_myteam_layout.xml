<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="75dp"
    android:layout_margin="20dp"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/custom_item_participant"
    android:id="@+id/item_karateka_market"
    >


    <de.hdodenhof.circleimageview.CircleImageView

        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginLeft="15dp"
        android:id="@+id/picture_karateka"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_gravity="center"

        app:civ_border_width="3dp"
        app:civ_border_color="@color/colorButtonBlack"
        android:src="@drawable/logo_border_karate_manager"
        />
    <LinearLayout


        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal|left"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_karateka"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorButtonBlack"
            android:textSize="14dp"
            android:gravity="start|center"
            android:text="Rafael Aghayev sefeefefefe"
            android:layout_marginLeft="10dp"
            android:layout_width="160dp"
            android:layout_height="34dp"/>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@drawable/logo_border_karate_manager"
                android:id="@+id/icon_country"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:gravity="center"
                app:civ_border_color="@color/colorButtonBlack"
                app:civ_border_width="1dp"

                xmlns:app="http://schemas.android.com/apk/res-auto"/>

            <TextView
                android:src="@drawable/logo_border_karate_manager"
                android:id="@+id/weigth_karateka"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:gravity="center"
                android:text="-75"
                android:textSize="12dp"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_circular_weigth"/>

            <TextView
                android:src="@drawable/logo_border_karate_manager"
                android:id="@+id/points_karateka_market"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:gravity="center"
                android:textSize="12dp"
                android:text="789"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_points_karatekas"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/item_button_value_karateka"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:text="23232"
            android:textSize="10dp"
            android:layout_marginLeft="8dp"

            >

        </TextView>
        <Button

            android:id="@+id/item_button_to_sell"
            android:layout_gravity="center"
            android:background="@drawable/custom_position_participant"
            android:textColor="@color/colorWhite"
            android:textSize="12dp"
            android:gravity="center_horizontal"
            android:text="Sell"

            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    </LinearLayout>


</LinearLayout>